<%# a retirer, juste pour verifier si les params passent bien %>

<div class='container'>
  <h1>Logements disponibles</h1>

    <div class='card-house-global' data-controller="modal">
      <% @houses.each do |house| %>
      <div class="global" data-controller="modal">
        <div class='card-house' data-modal-target="normal" data-action="click->modal#display" >
          <div class='image-house'><img src="<%= house[:image] %>" alt=""></div>
          <h3><%= house[:name] %></h3>
          <div class="card-house-infos">
            <div class="card-infos-1">
              <p><img src="https://cdn-icons-png.flaticon.com/512/865/865319.png" alt=""><%= house[:square_meters] %></p>
              <p><img src="https://www.pinclipart.com/picdir/big/113-1130894_dorms-hotel-room-icon-clipart.png" alt=""><%= house[:room_number] %></p>
            </div>
            <div class="card-infos-2">
              <p><%= house[:price] %></p>
              <p><img src="https://www.cjoint.com/doc/22_06/LFgpikUIDql_pixlr-bg-result-4-.png" alt=""></p>
            </div>
          </div>
        </div>
        <div class="modal_house d-none" data-modal-target="big">
          <div class='modal_house_img'><img src="<%= house[:image] %>" alt=""></div>
            <h3><%= house[:name] %></h3>
            <div id="cross" data-action="click->modal#close">x</div>
            <div class="modal_house_flex">
              <div class="modal_house_infos">
                <div class="modal_house_infos-1">
                  <p><img src="https://cdn-icons-png.flaticon.com/512/865/865319.png" alt=""><%= house[:square_meters] %></p>
                  <p><img src="https://www.pinclipart.com/picdir/big/113-1130894_dorms-hotel-room-icon-clipart.png" alt=""><%= house[:room_number] %></p>
                </div>
                <div class="modal_house_infos-2">
                  <p><strong><%= house[:price] %></strong></p>
                  <p><img src="https://www.cjoint.com/doc/22_06/LFgpikUIDql_pixlr-bg-result-4-.png" alt=""></p>
                </div>
              </div>
              <a href='<%=house[:link]%>' target="blank"><button id="see-house">Lien vers l'annonce</button></a>
            </div>
            <p><%= house[:description] %></p>
        </div>
      </div>
      <% end %>
    </div>
</div>
