<div class="container-district">

  <h1>Résultats de vos quartiers</h1>

  <%# à retirer ensuite c'est pour voir si on a bien les params %>
  <%= @district_params  %>

  <div class="cards-districts d-none">
    <% @top_3_districts.each do |district| %>
    <%# On va donner une id à chaque district pour selectionner la bonne ensuite en js %>
      <div id="<%= district.id %>" class="card-district">
        <a href="#"></a>
        <div class="image-district">
          <img src="<%= district.image %>" alt="">
        </div>
        <h4><%= district.name %></h4>
        <p><%= district.description %></p>
        <div class="districts-poi">
          <ul>
            <li>IMAGE</li>
            <li>IMAGE</li>
            <li>IMAGE</li>
            <li>IMAGE</li>
            <li>IMAGE</li>
            <li>IMAGE</li>
            <li>IMAGE</li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>

  <div class="map-quartier">
    <%# faire la modale vers carte  %>
    <button>Cartes des quartiers</button>
  </div>


  <div class="container">
    <%= simple_form_for :search, url: houses_path, method: "GET" do |f|  %>
      <%= f.input :prix, input_html: {name: 'house[price]', class: ''}, as: :boolean, checked_value: true, unchecked_value: false%>
      <%= f.input :nombre_de_pièces, input_html: { min: 0 , max: 10, step: 1, name: 'house[number_of_room]', class: ''}%>
      <%= f.input :superficie, input_html: {name: 'house[square_meter]', class: ''}, as: :boolean, checked_value: true, unchecked_value: false %>
      <%= f.submit "Lancé la recherche", class: ""  %>
    <% end %>
  </div>
</div>
