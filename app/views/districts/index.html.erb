<div class="container-district">

  <h1>Résultats de vos quartiers</h1>

  <%# à retirer ensuite c'est pour voir si on a bien les params %>
  <%= @district_params  %>

  <div class="cards-districts d-none">
    <% @top_3_districts.each do |district| %>
    <%# On va donner une id à chaque district pour selectionner la bonne ensuite en js %>
      <div id="<%= district.id %>" class="card-district">
        <a href="#"></a>
        <div class="image-district">
          <img src="<%= district.image %>" alt="">
        </div>
        <h4><%= district.name %></h4>
        <p><%= district.description %></p>
        <div class="districts-poi">
          <ul>
            <li>IMAGE</li>
            <li>IMAGE</li>
            <li>IMAGE</li>
            <li>IMAGE</li>
            <li>IMAGE</li>
            <li>IMAGE</li>
            <li>IMAGE</li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>

  <div class="map-quartier">
    <%# faire la modale vers carte  %>
    <button>Cartes des quartiers</button>
  </div>



    <%# la grid se fait sur le search_price %>
    <%= simple_form_for :search_price, url: houses_path, method: "GET" do |f|  %>
    <div class="card-price-district card website-presentation">
      <%# <h4>Prix:</h4> %>
      <div class="card-min-price">
      <h4>Prix:</h4>
        <%= f.input :min, input_html: {name: 'house[min_price]', class: ''}, as: :integer %>
      </div>
      <div class="card-rooms-district">
        <%= f.input :nombre_de_pièces, input_html: { min: 0, max: 10, step: 1, value: 3, name: 'house[number_of_room]', class: ''}, as: :range, min: 0, max: 10%>
      </div>

      <div class="card-max-price">
        <%= f.input :max, input_html: {name: 'house[max_price]', class: ''}, as: :integer%>
      </div>
      <div class="card-superficie-district">
        <%= f.input :superficie, input_html: {min: 0, max: 250, step: 1, value: 65, name: 'house[square_meter]', class: ''}, as: :range, min: 0, max: 250 %>
      </div>
      <%= f.submit "Lancé la recherche", class: "button-search-house"  %>
    </div>
    <% end %>


</div>
